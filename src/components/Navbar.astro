<script>
  // Credits to satnaing/lancerossdev on GitHub
  // Dark and light mode toggle logic
  const darkModeMediaQuery   = window.matchMedia("(prefers-color-scheme: dark)").matches;
  const storedTheme = localStorage.getItem("theme");
  let theme;
  if (!!storedTheme) {
    // Theme exists, choose 
    theme = storedTheme === "dark" ? "dark" : "light";
  } else {
    // Theme does not exist, check browser preference
    if (darkModeMediaQuery) {
      theme = "dark";
    } else {
      theme = darkModeMediaQuery ? "dark" : "light";
    }
  }

  // Set the theme on the <html> element
  document.documentElement.className = theme;

  const themeButton = document.querySelector("#theme-button");
  const htmlClassList = document.documentElement.classList;

  if (!!themeButton) {
    // When the theme button is clicked, change theme
    // We store the theme in local storage
    themeButton.addEventListener("click", function () {
      if (!!htmlClassList) {
        if (htmlClassList.contains("dark")) {
          localStorage.setItem("theme", "light");
          htmlClassList.remove("dark");
          htmlClassList.add("light");
        } else {
          localStorage.setItem("theme", "dark");
          htmlClassList.remove("light");
          htmlClassList.add("dark");
        }
      }
    });
  }
</script>
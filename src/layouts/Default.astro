---
import CommonHead from '@components/CommonHead.astro';
import Footer from '@components/Footer.astro';
import Navbar from '@components/Navbar.astro';

export interface Props {
  title: string;
  description: string;
  image?: string;
  tumblrRedir?: boolean;
  showEmailList?: boolean;
}

const { title, description, image, tumblrRedir, showEmailList } = Astro.props;
---

<html lang="en">
  <CommonHead title={title} description={description} image={image} tumblrRedir={tumblrRedir} />
  <body class="text-lg text-gray-800 bg-white dark:text-gray-200 dark:bg-dark-bg">
    <Navbar />
    <main class="px-8 lt-xs:px-4 max-w-3xl mx-auto">
      <!-- content is injected here -->
      <slot />
    </main>
    <Footer showEmailList={showEmailList} />
  </body>
</html>
